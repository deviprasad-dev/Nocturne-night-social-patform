{
  "name": "nocturne-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Nocturne",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:server",
    "build:clean": "rm -rf lib",
    "build:server": "esbuild ../server/index.ts --bundle --platform=node --target=node18 --outfile=lib/index.js --external:firebase-functions --external:firebase-admin --external:express --external:ws --external:@neondatabase/serverless --external:drizzle-orm --external:zod --external:connect-pg-simple --external:express-session --external:passport --external:passport-local --external:openid-client --external:memoizee",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "@neondatabase/serverless": "^0.7.2",
    "drizzle-orm": "^0.29.1",
    "zod": "^3.22.4",
    "connect-pg-simple": "^9.0.1",
    "express-session": "^1.17.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "openid-client": "^5.6.4",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "esbuild": "^0.19.11",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}